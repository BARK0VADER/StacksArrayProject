#include<iostream>
#include <string>
using namespace std;

struct Stack

int main()
{
    stack<int> numbers;
    cout << "size: " << numbers.size() << endl;
    
    if (numbers.empty())
    {
        cout << "Stack is empty." << endl;
    }
    numbers.push(8);
    cout << "size: " << numbers.size() << endl;
    
    if (!numbers.empty())
    {
        cout << "Stack is not empty" << endl;
    }
    
    cout << "top: " << numbers.top() << endl;
    
    numbers.pop();
    
    
}

int searchArray(string array[], int size, string element);

int main()
{
    string choice[] = {"A", "B", "C", "D"};
    int size = sizeof(choice)/sizeof(choice[0]);
    int index;
    string myChoice;

    cout << "Stack Menu Prompt" << endl;
    cout << "Type A to push a number to the stack" << endl;
    cout << "Type B to pop a number from the stack" << endl;
    cout << "Type C to output the top of the stack" << endl;
    cout << "Type D to purge the stack" << endl;
    
    getline(cin, myChoice);

    index = searchArray(choice, size, myChoice);

    if(index == 0)
    {
        cout << "choice1" << endl;
    }
    else if(index == 1)
    {
        cout << "choice2" << endl;
    }
    else if(index == 2)
    {
        cout << "choice3" << endl;
    }
    else if(index == 3)
    {
        cout << "choice4" << endl;
    } 
    else
    {
        cout << "try again bozo" << endl;
    }
    return 0;
}
int searchArray(string array[], int size, string element){

    for(int i = 0; i < size; i++){
        if(array[i] == element){
            return i;
        }
    }
    return -1;
}
